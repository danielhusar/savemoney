<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1, width=device-width">
    <meta name="description" content="<%= @description %>">

    <%= tag("meta", property: "og:title", content: @title) %>
    <%= tag("meta", property: "og:type", content: "website") %>
    <%= tag("meta", property: "og:url", content: request.original_url) %>
    <%= tag("meta", property: "og:image", content: @social_image) unless @social_image.nil? %>
    <%= tag("meta", property: "og:description", content: @description) unless @description.empty? %>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= tag("link", rel: "canonical", href: "#{ request.protocol + request.host + url_for(page: params[:page]) }") %>
  </head>

  <body>
    <%= yield %>
    <%= javascript_include_tag "application" %>
  </body>
</html>
